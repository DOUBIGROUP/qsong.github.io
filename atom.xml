n class=&quot;line&quot;&gt;把 &lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;&lt;span class=&quot;meta&quot;&gt;$&lt;/span&gt;&lt;span class=&quot;bash&quot;&gt;&lt;span class=&quot;variable&quot;&gt;$row&lt;/span&gt;[&lt;span class=&quot;string&quot;&gt;&#39;option_name&#39;&lt;/span&gt;] = &lt;span class=&quot;variable&quot;&gt;$row&lt;/span&gt;[&lt;span class=&quot;string&quot;&gt;&#39;option_value&#39;&lt;/span&gt;]; &lt;/span&gt;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;改为 &lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;&lt;span class=&quot;meta&quot;&gt;$&lt;/span&gt;&lt;span class=&quot;bash&quot;&gt;&amp;#123;&lt;span class=&quot;variable&quot;&gt;$row&lt;/span&gt;[&lt;span class=&quot;string&quot;&gt;&#39;option_name&#39;&lt;/span&gt;]&amp;#125; = &lt;span class=&quot;variable&quot;&gt;$row&lt;/span&gt;[&lt;span class=&quot;string&quot;&gt;&#39;option_value&#39;&lt;/span&gt;];&lt;/span&gt;&lt;/span&gt;&lt;br&gt;&lt;/pre&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;&lt;/figure&gt;&lt;/li&gt;&lt;/ol&gt;
    
